<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Biblioteca Digital</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 1000px;
            width: 90%;
            margin: 20px;
        }
        
        .login-image {
            background: linear-gradient(135deg, #0d6efd 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            padding: 3rem;
            text-align: center;
        }
        
        .login-form {
            padding: 3rem;
        }
        
        .form-floating label {
            color: #6c757d;
        }
        
        .btn-login {
            background: linear-gradient(135deg, #0d6efd 0%, #764ba2 100%);
            border: none;
            padding: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(13, 110, 253, 0.3);
        }
        
        .feature-list {
            list-style: none;
            padding: 0;
            margin: 2rem 0;
        }
        
        .feature-list li {
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
        }
        
        .feature-list i {
            margin-right: 1rem;
            color: #ffc107;
        }
        
        @media (max-width: 768px) {
            .login-container {
                margin: 10px;
            }
            
            .login-image,
            .login-form {
                padding: 2rem;
            }
            
            .login-image {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="row g-0">
            <!-- Left side - Image/Features -->
            <div class="col-lg-6">
                <div class="login-image">
                    <div>
                        <i class="bi bi-book-half" style="font-size: 4rem; margin-bottom: 2rem;"></i>
                        <h2 class="mb-4">Biblioteca Digital</h2>
                        <p class="mb-4">Accede a miles de libros digitales desde cualquier lugar</p>
                        
                        <ul class="feature-list">
                            <li><i class="bi bi-check-circle-fill"></i> Catálogo extenso de libros</li>
                            <li><i class="bi bi-check-circle-fill"></i> Descargas ilimitadas (matriculados)</li>
                            <li><i class="bi bi-check-circle-fill"></i> Comentarios y calificaciones</li>
                            <li><i class="bi bi-check-circle-fill"></i> Favoritos personales</li>
                            <li><i class="bi bi-check-circle-fill"></i> Acceso multiplataforma</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Right side - Login Form -->
            <div class="col-lg-6">
                <div class="login-form">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
                        <h3 class="mt-3">Iniciar Sesión</h3>
                        <p class="text-muted">Ingresa con tu DNI y contraseña</p>
                    </div>
                    
                    <!-- Alert Messages -->
                    <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
                        <% messages.forEach(message => { %>
                            <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                                <%= message.text %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% }) %>
                    <% } %>
                    
                    <form id="loginForm" action="/auth/login" method="POST" class="ajax-form">
                        <!-- DNI Field -->
                        <div class="form-floating mb-3">
                            <input type="text" 
                                   class="form-control" 
                                   id="dni" 
                                   name="dni" 
                                   placeholder="Ingrese su DNI"
                                   pattern="[0-9]{8}"
                                   maxlength="8"
                                   required>
                            <label for="dni">
                                <i class="bi bi-badge me-2"></i>DNI
                            </label>
                            <div class="form-text">Ingrese 8 dígitos numéricos</div>
                        </div>
                        
                        <!-- Password Field -->
                        <div class="form-floating mb-4">
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   placeholder="Ingrese su contraseña"
                                   minlength="6"
                                   required>
                            <label for="password">
                                <i class="bi bi-lock me-2"></i>Contraseña
                            </label>
                            <div class="form-text">Mínimo 6 caracteres</div>
                        </div>
                        
                        <!-- Remember Me & Forgot Password -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Recordarme
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none" onclick="showResetPasswordModal()">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>
                        
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-login w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Iniciar Sesión
                        </button>
                        
                        <!-- Help Text -->
                        <div class="text-center">
                            <p class="text-muted mb-2">
                                ¿Necesitas ayuda para ingresar?
                            </p>
                            <div class="bg-light rounded p-3">
                                <small class="text-muted">
                                    <strong>Estudiantes:</strong> Ingresa con tu DNI y contraseña proporcionada por la institución.<br>
                                    <strong>Administradores:</strong> Usa tu DNI de administrador para acceder al panel.
                                </small>
                            </div>
                        </div>
                    </form>
                    
                    <!-- System Info -->
                    <hr class="my-4">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Sistema de Biblioteca Digital v1.0<br>
                            Soporte técnico: soporte@biblioteca.com
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Reset Password Modal -->
    <div class="modal fade" id="resetPasswordModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Recuperar Contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">
                        Para recuperar tu contraseña, contacta al administrador del sistema 
                        o envía un correo a soporte@biblioteca.com con tu DNI y nombre completo.
                    </p>
                    
                    <div class="bg-light rounded p-3">
                        <h6 class="text-primary">Información requerida:</h6>
                        <ul class="mb-0">
                            <li>DNI completo</li>
                            <li>Nombre y apellido</li>
                            <li>Email registrado</li>
                            <li>Teléfono de contacto</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <a href="mailto:soporte@biblioteca.com" class="btn btn-primary">
                        <i class="bi bi-envelope me-2"></i>Enviar Correo
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
    
    <script>
        // Additional login page specific functions
        document.getElementById('dni').addEventListener('input', function(e) {
            // Only allow numbers
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        
        function showResetPasswordModal() {
            const modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            modal.show();
        }
        
        // Auto-focus on DNI field
        document.getElementById('dni').focus();
        
        // Handle form submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const dni = document.getElementById('dni').value;
            const password = document.getElementById('password').value;
            
            if (dni.length !== 8) {
                e.preventDefault();
                showAlert('El DNI debe tener exactamente 8 dígitos', 'warning');
                return;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                showAlert('La contraseña debe tener al menos 6 caracteres', 'warning');
                return;
            }
        });
    </script>
</body>
</html>