<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' - ' : '' %>Biblioteca Digital</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Meta tags for SEO -->
    <meta name="description" content="Sistema de biblioteca digital con catálogo navegable, descargas y gestión de matrículas">
    <meta name="keywords" content="biblioteca, libros, digital, educación, catálogo">
</head>
<body>
    <!-- Navigation -->
    <%- include('../partials/navigation') %>
    
    <!-- Alert Messages -->
    <div class="container-fluid mt-3">
        <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
            <% messages.forEach(message => { %>
                <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                    <%= message.text %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }) %>
        <% } %>
    </div>
    
    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('../partials/footer') %>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof pageScripts !== 'undefined') { %>
        <%- pageScripts %>
    <% } %>
</body>
</html>